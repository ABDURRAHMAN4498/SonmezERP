@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="text-center my-5">
    <h6 class="display-6">
        <i class="fa-solid fa-user-plus text-white bg-secondary p-3 rounded-5"></i>
        <br />
        Login
    </h6>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="text-center text-danger">
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Register">
            
            <div class="form-group my-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control my-1" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control my-1"/>
            </div>
            <div class="form-group my-3">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control my-1" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control my-1" />
            </div>
            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-user-plus"></i>
                    Register
                </button>
            </div>

        </form>
    </div>
    <div class="col-3"></div>
</div>


