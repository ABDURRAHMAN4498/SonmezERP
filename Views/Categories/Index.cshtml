@model IEnumerable<SonmezERP.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Ürün Çaşitlerimiz</h1>

<div class="row d-flex justify-content-evenly">
    <a class="btn btn-success col-4 my-3" asp-action="Create">Create New</a>
    <div class="col-2"></div>
    <a class="btn btn-info col-4 my-3" asp-controller="home" asp-action="index">Ana Sayfaya Dön</a>
</div>
<table class="table table-hover table-dark table-striped-columns text-md-center">
    <thead>
        <tr>
            <th class="col-8 text-xl-start">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="col-1">#</th>
            <th class="col-1">#</th>
            <th class="col-1">#</th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="text-xl-start">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
