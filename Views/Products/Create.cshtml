@model SonmezERP.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row fs-4">
    <div class="d-flex justify-content-evenly">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check d-flex justify-content-evenly">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visiblity" /> @Html.DisplayNameFor(model => model.Visiblity)
                </label>
            </div>
            <hr />
            <div class="row">
                <div class="form-group col-auto">
                    <label asp-for="ProductCode" class="control-label"></label>
                    <input asp-for="ProductCode" class="form-control" />
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="Barcode" class="control-label"></label>
                    <input asp-for="Barcode" class="form-control" />
                    <span asp-validation-for="Barcode" class="text-danger"></span>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="ProductNameTr" class="control-label"></label>
                    <input asp-for="ProductNameTr" class="form-control" />
                    <span asp-validation-for="ProductNameTr" class="text-danger"></span>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="ProductNameEn" class="control-label"></label>
                    <input asp-for="ProductNameEn" class="form-control" />
                    <span asp-validation-for="ProductNameEn" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="form-group col-auto">
                    <label asp-for="BrandId" class="control-label"></label>
                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="ColorId" class="control-label"></label>
                    <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="KdvId" class="control-label"></label>
                    <select asp-for="KdvId" class="form-control" asp-items="ViewBag.KdvId"></select>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="UnitsOfMeasurementId" class="control-label"></label>
                    <select asp-for="UnitsOfMeasurementId" class="form-control" asp-items="ViewBag.UnitsOfMeasurementId"></select>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="ProductDetailsId" class="control-label" ></label>
                    <select asp-for="ProductDetailsId" class="form-control" asp-items="ViewBag.ProductDetailsId" data-live-search="true"></select>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="form-group col-auto">
                    <label asp-for="PriceTl" class="control-label"></label>
                    <input asp-for="PriceTl" class="form-control" />
                    <span asp-validation-for="PriceTl" class="text-danger"></span>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="PriceUSD" class="control-label"></label>
                    <input asp-for="PriceUSD" class="form-control" />
                    <span asp-validation-for="PriceUSD" class="text-danger"></span>
                </div>
            </div>
           
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-3 col-12"  />
            </div>
        </form>
        
    </div>
    <div class="d-flex justify-content-evenly">
        <a class="btn btn-outline-dark col-9" asp-action="Index">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
