@model IEnumerable<SonmezERP.Models.ProductLog>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1>Stok Girişi</h1>
    <p>
        <a class="btn btn-success" asp-action="Create">Stok Girişi Yap</a>
    </p>
</div>
<table class="table table-bordered table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Color.ColorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.ActionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductNameTr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Color.ColorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Input)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.ActionDate)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
