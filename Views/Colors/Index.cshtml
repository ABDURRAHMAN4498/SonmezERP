@model IEnumerable<SonmezERP.Models.Color>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-hover text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ColorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i
                            class="fa-solid fa-pen-to-square"></i></a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i
                            class="fa-solid fa-circle-info"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i
                            class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
